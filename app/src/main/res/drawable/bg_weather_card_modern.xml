<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_shadow" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <!-- Main card -->
    <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_background_modern" />
            <corners android:radius="28dp" />
        </shape>
    </item>
</layer-list>