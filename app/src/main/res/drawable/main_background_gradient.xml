<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main gradient background using Formosa palette -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/formosa_blue_dark"
                android:centerColor="@color/formosa_blue_primary"
                android:endColor="@color/formosa_blue_light"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Subtle overlay for depth and sophistication -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:height="400dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/formosa_blue_dark"
                android:endColor="@color/formosa_blue_primary"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Bottom accent for visual balance -->
    <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:height="300dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="@color/formosa_blue_light"
                android:endColor="@color/formosa_blue_accent"
                android:type="linear" />
        </shape>
    </item>
</layer-list>