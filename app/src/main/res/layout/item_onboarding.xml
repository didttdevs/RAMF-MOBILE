<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <!-- Imagen -->
    <ImageView
        android:id="@+id/ivOnboardingImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_welcome"
        android:layout_marginBottom="32dp"
        app:tint="@color/white" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvOnboardingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido a RAMF!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/tvOnboardingDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="La Red Agrometeorológica de Formosa te brinda acceso a datos meteorológicos en tiempo real de toda la provincia."
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:alpha="0.9" />

</LinearLayout>









