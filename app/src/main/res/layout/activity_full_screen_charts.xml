<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/formosa_gradient_professional"
    tools:context=".ui.activities.FullScreenChartsActivity">

    <!-- AppBarLayout para la toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="4dp">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/formosa_blue_primary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@android:color/white"
            app:navigationIconTint="@android:color/white"
            app:layout_scrollFlags="scroll|enterAlways" />

        <!-- Selector de tipo de vista y filtros de categoría -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/formosa_blue_light"
            android:padding="12dp">

            <!-- Dropdown de selección de gráficos - Material Components -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/chartSelectorLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seleccionar tipo de gráfico"
                app:boxBackgroundColor="@android:color/white"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxStrokeColor="@color/formosa_blue_primary"
                app:boxStrokeWidth="2dp"
                app:endIconMode="dropdown_menu"
                app:startIconDrawable="@drawable/ic_chart_line"
                app:startIconTint="@color/formosa_blue_primary"
                app:hintTextColor="@color/formosa_blue_primary"
                app:endIconTint="@color/formosa_blue_primary"
                app:helperText="Elige qué gráficos mostrar"
                app:helperTextTextColor="@color/text_secondary_gray"
                android:layout_marginBottom="16dp">

                <AutoCompleteTextView
                    android:id="@+id/chartSelectorDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:minHeight="56dp"
                    android:gravity="center_vertical"
                    android:text="Todos los gráficos"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:singleLine="true"
                    android:ellipsize="end" />

            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Container principal para evitar superposición -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- RecyclerView para mostrar múltiples gráficos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chartsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_chart_card" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- FAB para exportar datos -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabExport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Exportar datos"
        app:srcCompat="@android:drawable/ic_menu_save"
        app:backgroundTint="@color/formosa_blue_primary"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
