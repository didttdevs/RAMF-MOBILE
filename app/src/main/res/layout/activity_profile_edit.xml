<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.activities.ProfileEditActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Editar Perfil"
        app:titleTextColor="@color/text_white_primary" />

    <!-- Progress Bar -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:indicatorColor="@color/formosa_blue_primary"
        app:indicatorSize="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:trackColor="@color/white"
        app:trackThickness="4dp" />

    <!-- ScrollView for content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Profile Avatar Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/background_color_btn"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:strokeWidth="0dp"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <!-- Avatar Image -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="8dp"
                        app:strokeWidth="4dp"
                        app:strokeColor="@color/formosa_blue_primary"
                        app:cardPreventCornerOverlap="false">

                        <ImageView
                            android:id="@+id/ivAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Avatar del usuario"
                            android:padding="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_default_profile"
                            app:tint="@color/formosa_blue_primary" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Change Avatar Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnChangeAvatar"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cambiar Avatar"
                        android:textColor="@color/formosa_blue_primary"
                        app:icon="@drawable/ic_camera"
                        app:iconGravity="start"
                        app:iconPadding="8dp"
                        app:iconTint="@color/formosa_blue_primary"
                        app:strokeColor="@color/formosa_blue_primary"
                        app:strokeWidth="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Personal Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/background_color_btn"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:strokeWidth="0dp"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Informaci칩n Personal"
                        android:textColor="@color/formosa_blue_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- First Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilFirstName"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Nombre"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="@color/formosa_blue_primary"
                        app:boxStrokeWidth="2dp"
                        app:endIconMode="clear_text"
                        app:helperText="Tu nombre de pila"
                        app:helperTextTextColor="@color/formosa_blue_primary"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/formosa_blue_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:maxLength="50"
                            android:singleLine="true"
                            android:textColor="@color/formosa_blue_primary"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Last Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilLastName"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Apellido"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="@color/formosa_blue_primary"
                        app:boxStrokeWidth="2dp"
                        app:endIconMode="clear_text"
                        app:helperText="Tu apellido"
                        app:helperTextTextColor="@color/formosa_blue_primary"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/formosa_blue_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:maxLength="50"
                            android:singleLine="true"
                            android:textColor="@color/formosa_blue_primary"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email (Read-only) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Correo electr칩nico"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="@color/formosa_blue_primary"
                        app:boxStrokeWidth="1dp"
                        app:helperText="El email no se puede cambiar"
                        app:helperTextTextColor="@color/formosa_blue_primary"
                        app:startIconDrawable="@drawable/ic_email"
                        app:startIconTint="@color/formosa_blue_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:inputType="textEmailAddress"
                            android:singleLine="true"
                            android:textColor="@color/formosa_blue_primary"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Account Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/background_color_btn"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:strokeWidth="0dp"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Informaci칩n de Cuenta"
                        android:textColor="@color/formosa_blue_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <!-- User Role -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:text="Rol"
                            android:textColor="@color/formosa_blue_primary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvUserRole"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Usuario"
                            android:textColor="@color/formosa_blue_primary"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <!-- Created At -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:text="Miembro desde"
                            android:textColor="@color/formosa_blue_primary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvCreatedAt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="01/01/2024"
                            android:textColor="@color/formosa_blue_primary"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Actions Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/background_color_btn"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:strokeWidth="0dp"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Acciones de Cuenta"
                        android:textColor="@color/formosa_blue_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Change Password Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnChangePassword"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="start|center_vertical"
                        android:padding="16dp"
                        android:text="Cambiar Contrase침a"
                        android:textAlignment="textStart"
                        android:textColor="@color/formosa_blue_primary"
                        android:textSize="16sp"
                        app:icon="@drawable/ic_lock"
                        app:iconGravity="start"
                        app:iconPadding="16dp"
                        app:iconTint="@color/formosa_blue_primary" />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="32dp"
                android:text="Guardar Cambios"
                android:textColor="@color/text_white_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@color/formosa_blue_primary"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_check_circle"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconTint="@color/text_white_primary" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>