<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/formosa_gradient_professional"
    tools:context=".ui.activities.UserProfileActivity">

    <!-- App Bar -->
    <LinearLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Volver"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Mi Perfil"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
 />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- Profile Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Profile Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileHeaderCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="24dp"
                app:cardElevation="16dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <!-- Profile Image -->
                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="20dp"
                        android:contentDescription="Foto de perfil"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_default_profile" />

                    <!-- User Name -->
                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Nombre Usuario"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="28sp"
                        android:textStyle="bold"
 />

                    <!-- User Email -->
                    <TextView
                        android:id="@+id/tvUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="email@example.com"
                        android:textColor="@color/text_secondary_gray"
                        android:textSize="16sp"
 />

                    <!-- User Role Badge -->
                    <TextView
                        android:id="@+id/tvUserRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_type_pill"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="12dp"
                        android:text="Usuario"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
 />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/statusCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_circle_primary"
                        android:padding="8dp"
                        android:src="@drawable/ic_check_circle"
                        app:tint="@color/white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado de Cuenta"
                            android:textColor="@color/text_secondary_gray"
                            android:textSize="14sp"
                            android:textStyle="bold"
 />

                        <TextView
                            android:id="@+id/tvUserStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="ACTIVO"
                            android:textColor="@color/success_color"
                            android:textSize="18sp"
                            android:textStyle="bold"
 />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvUserLastLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Último ingreso:\nHoy"
                        android:textAlignment="textEnd"
                        android:textColor="@color/text_secondary_gray"
                        android:textSize="12sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Personal Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/personalInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:text="Información Personal"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <!-- Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_circle_primary"
                            android:padding="6dp"
                            android:src="@drawable/ic_phone"
                            app:tint="@color/white" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Teléfono"
                                android:textColor="@color/text_secondary_gray"
                                android:textSize="13sp"
                                android:textStyle="bold"
 />

                            <TextView
                                android:id="@+id/tvUserPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="No especificado"
                                android:textColor="@color/text_primary_dark"
                                android:textSize="16sp"
 />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/background_light" />

                    <!-- DNI -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_circle_primary"
                            android:padding="6dp"
                            android:src="@drawable/ic_dni"
                            app:tint="@color/white" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DNI"
                                android:textColor="@color/text_secondary_gray"
                                android:textSize="13sp"
                                android:textStyle="bold"
 />

                            <TextView
                                android:id="@+id/tvUserDni"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="No especificado"
                                android:textColor="@color/text_primary_dark"
                                android:textSize="16sp"
 />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/background_light" />

                    <!-- Job Position -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_circle_primary"
                            android:padding="6dp"
                            android:src="@drawable/ic_maletin"
                            app:tint="@color/white" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Puesto de trabajo"
                                android:textColor="@color/text_secondary_gray"
                                android:textSize="13sp"
                                android:textStyle="bold"
 />

                            <TextView
                                android:id="@+id/tvUserJobPosition"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="No especificado"
                                android:textColor="@color/text_primary_dark"
                                android:textSize="16sp"
 />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/background_light" />

                    <!-- Company -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_circle_primary"
                            android:padding="6dp"
                            android:src="@drawable/ic_enterprise"
                            app:tint="@color/white" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Empresa o Institución"
                                android:textColor="@color/text_secondary_gray"
                                android:textSize="13sp"
                                android:textStyle="bold"
 />

                            <TextView
                                android:id="@+id/tvUserCompany"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="No especificado"
                                android:textColor="@color/text_primary_dark"
                                android:textSize="16sp"
 />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Account Actions Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/accountActionsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:text="Configuración de Cuenta"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="20sp"
                        android:textStyle="bold"
 />

                    <!-- Change Password Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="20dp"
                        android:text="Cambiar Contraseña"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:textAlignment="center"
                        app:backgroundTint="@color/formosa_blue_accent"
                        app:cornerRadius="12dp"
                        app:rippleColor="@color/formosa_blue_light"
                        app:strokeWidth="0dp"
                        style="@style/Widget.MaterialComponents.Button" />

                    <!-- Privacy Settings Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPrivacySettings"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Configuración de Privacidad"
                        android:textColor="@color/formosa_blue_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:drawableStart="@drawable/ic_settings"
                        android:drawablePadding="12dp"
                        app:strokeColor="@color/formosa_blue_accent"
                        app:strokeWidth="1dp"
                        app:iconTint="@color/formosa_blue_primary"
                        app:cornerRadius="12dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>