<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RAFapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Formosa Government Blue Colors -->
        <item name="colorPrimary">@color/formosa_blue_primary</item>
        <item name="colorPrimaryVariant">@color/formosa_blue_dark</item>
        <item name="colorOnPrimary">@color/text_white_primary</item>
        <item name="colorSecondary">@color/formosa_blue_accent</item>
        <item name="colorSecondaryVariant">@color/formosa_blue_light</item>
        <item name="colorOnSecondary">@color/text_white_primary</item>
        
        <!-- Window configuration -->
        <item name="android:windowBackground">@color/background_color_gb</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Material Components -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>

    <!-- High Contrast Typography Styles -->
    <style name="TextAppearance.Weather.Display" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/text_white_primary</item>
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Weather.Title.Dark" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Weather.Title.White" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_white_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Weather.Subtitle.Dark" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_secondary_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Weather.Subtitle.White" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_white_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Weather.Caption.Dark" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_secondary_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Weather.Caption.White" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_white_primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="TextAppearance.Weather.Subtitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_white_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Weather.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_white_primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Widget.App.CardView.Glass" parent="Widget.App.CardView">
        <item name="cardBackgroundColor">@color/glass_white</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- High Contrast Card Styles -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Widget.App.CardView.Main" parent="Widget.App.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="Widget.App.CardView.Data" parent="Widget.App.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <!-- Text Input Layout Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeColor">@color/formosa_blue_accent</item>
        <item name="hintTextColor">@color/text_secondary_gray</item>
    </style>

</resources>