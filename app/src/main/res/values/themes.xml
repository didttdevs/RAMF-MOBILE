<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.RAMFapp" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/formosa_blue_primary</item>
        <item name="colorOnPrimary">@color/text_white_primary</item>
        <item name="colorPrimaryContainer">@color/formosa_blue_light</item>
        <item name="colorOnPrimaryContainer">@color/text_white_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/formosa_blue_accent</item>
        <item name="colorOnSecondary">@color/text_white_primary</item>
        <item name="colorSecondaryContainer">@color/card_subtle_white</item>
        <item name="colorOnSecondaryContainer">@color/text_primary_dark</item>
        
        <!-- Tertiary brand color -->
        <item name="colorTertiary">@color/temperature_hot</item>
        <item name="colorOnTertiary">@color/text_white_primary</item>
        <item name="colorTertiaryContainer">@color/sunny_yellow</item>
        <item name="colorOnTertiaryContainer">@color/text_primary_dark</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/text_white_primary</item>
        <item name="colorErrorContainer">@color/card_subtle_white</item>
        <item name="colorOnErrorContainer">@color/error_red</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/card_solid_white</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorSurfaceVariant">@color/card_subtle_white</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_gray</item>
        
        <!-- Outline colors -->
        <item name="colorOutline">@color/formosa_blue_primary</item>
        <item name="colorOutlineVariant">@color/card_shadow</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        
        <!-- Status bar transparente -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar transparente -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Permitir dibujar detrÃ¡s de las barras del sistema -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
    
    <style name="Button.Ramf.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="backgroundTint">@color/button_primary_background</item>
        <item name="cornerRadius">12dp</item>
        <item name="rippleColor">@color/formosa_blue_light</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    
    <style name="Button.Ramf.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/formosa_blue_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/formosa_blue_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/formosa_blue_light</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>
    
    <!-- Material 3 Text Button Theme -->
    <style name="Widget.Material3.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="backgroundTint">@color/button_background_color_selector</item>
        <item name="android:textColor">@color/button_text_color_selector</item>
        <item name="rippleColor">@color/formosa_blue_light</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/formosa_gradient_professional</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
    
    <!-- No Action Bar Theme -->
    <style name="Theme.RAMFapp.NoActionBar" parent="Theme.RAMFapp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Weather Text Appearances -->
    <style name="TextAppearance.Weather.Display" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textColor">@color/text_white_primary</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.Weather.Title.Dark" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.Weather.Subtitle.Dark" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary_gray</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextAppearance.Weather.Caption.Dark" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary_gray</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <!-- Card View Styles -->
    <style name="Widget.App.CardView.Main" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_solid_white</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeColor">@color/card_shadow</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <style name="Widget.App.CardView.Data" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_subtle_white</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/card_shadow</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Date Picker Theme Overlay -->
    <style name="ThemeOverlay.App.DatePicker" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/formosa_blue_primary</item>
        <item name="colorOnPrimary">@color/text_white_primary</item>
        <item name="colorSurface">@color/card_solid_white</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
    </style>
    
    <!-- Bottom Sheet Dialog Theme Overlay -->
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/formosa_blue_primary</item>
        <item name="colorOnPrimary">@color/text_white_primary</item>
        <item name="colorSurface">@color/card_solid_white</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
    </style>
</resources>